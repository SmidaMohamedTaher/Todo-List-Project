                <Font name="SansSerif Regular" size="15.0" />
            </font>
        </Label>
        <Label fx:id="descriptionLable" alignment="CENTER" contentDisplay="CENTER" prefHeight="53.0" prefWidth="149.0" text="Description1..." textFill="WHITE" HBox.hgrow="ALWAYS">
